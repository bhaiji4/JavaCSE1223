
import java.util.Scanner;

public class ClosedLab02pt2 {

	public static void main(String[] args) {
	Scanner in = new Scanner (System.in);
	
	System.out.println("Enter the length of the first side: ");
	double firstSide=in.nextInt();
	System.out.println("Enter the length of the second side: ");
	double secondSide=in.nextInt();
	double perimeter=firstSide*2 + secondSide*2;
	System.out.println("The perimeter of your rectangle is: " + perimeter);
	double area=firstSide*secondSide;
	System.out.println("The area of your rectangle is: " + area);
	double diagonal = Math.sqrt((firstSide*firstSide) + (secondSide*secondSide));
	System.out.println("The length of your diagonal of your rectangle is: " + diagonal);
	System.out.println("Goodbye!");
	}

}
